<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.sacconnecte.MainActivity">

    <ImageView
        android:id="@+id/Welcome"
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:src="@drawable/welcome"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonCode"

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="DÃ©verouillage par code"

            android:textColor="#ECEFF1"
            style="@android:style/Widget.Material.Button.Colored"

            android:onClick="buttonCode"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSave"
            android:layout_weight="1"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Enregistrer une nouvelle empreinte"

            android:textColor="#ECEFF1"
            style="@android:style/Widget.Material.Button.Colored"

            android:onClick="buttonSave"
            />

        <Button
            android:id="@+id/buttonAdresse"
            android:layout_weight="1"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Adresses de confiance"


            android:textColor="#ECEFF1"
            style="@android:style/Widget.Material.Button.Colored"

            android:onClick="buttonAdresse"
            />
    </LinearLayout>

    </LinearLayout>

</LinearLayout>
